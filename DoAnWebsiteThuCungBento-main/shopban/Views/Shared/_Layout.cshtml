                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-2 align-self-center">
                        <div class="header-right-element d-flex justify-content-end">
                            <!--Cart info Start -->
                            @Html.Action("Gia", "Giohang")
                        </div>
                        <!--Cart info End -->
                    </div>
                </div>
            </div>
        </div>
        <!-- Header Nav End -->
